<div class="container">
    <div class="row"> 
        <div class="col-lg-6 col-md-5 col-sm-6 col-xs-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">BURGERS</h3>
                </div>
                <div class="panel-body">
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            <span><p>{{name}}</p> 
                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name ="devoured" value = "true">
                            <button type="submit"  class="btn btn-warning">Devour</button></span>
                            </form>
                        {{/unless}}
                    {{/each}}
                </div>
                </div>
            </div>
      
          <div class="col-lg-6 col-md-5 col-sm-6 col-xs-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">DEVOURED</h3>
                </div>
                <div class="panel-body" id="devoured">
                    <ul>
                        {{#each burgers}}
                            {{#if this.devoured}}
                            <li>
                                {{this.name}}
                
                                
                            </li>
                            {{/if}}
                        {{/each}}
                        </ul>
                </div>
                </div>
            </div>

    <div class="row">
        <form action="/" method="POST"> 
            <div class="form-group">
            <label for="exampleTextarea">Create Burger</label>
            <textarea class="form-control" id="exampleTextarea" rows="3" name="burger_name"></textarea>
             </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>